<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_versus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.mxi.lineapp.activity.VersusActivity">

    <include layout="@layout/app_bar_versus_mode" />

    <FrameLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">


            <AbsoluteLayout
                android:id="@+id/ll_team_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/ground_pattent"
                android:orientation="vertical" />


            <AbsoluteLayout
                android:id="@+id/ll_team_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/ground_pattent"
                android:orientation="vertical" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_v_mode_team_name_1"
            android:layout_gravity="left"
            android:padding="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorTransparentWhite"
            android:text="Team1"
            android:background="@color/colorBlackTransparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_v_mode_team_name_2"
            android:layout_gravity="right"
            android:padding="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorTransparentWhite"
            android:text="Team2"
            android:background="@color/colorBlackTransparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</LinearLayout>
