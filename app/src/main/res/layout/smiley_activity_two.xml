<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="2dp"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_smiley">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <LinearLayout
                    android:id="@+id/ln_smiley_one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="3.5dp">

                    <ImageView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:src="@mipmap/football"/>


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ln_smiley_three"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="3.5dp">

                    <ImageView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:src="@mipmap/choose_no_of_players"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_smiley_two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="3.5dp">

                    <ImageView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:src="@mipmap/smiley"/>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ln_smiley_four"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="3.5dp">

                    <ImageView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:src="@mipmap/add_player"/>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.7"
            android:gravity="right"
            android:layout_gravity="right">

            <LinearLayout
                android:id="@+id/ln_share_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/share"/>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lvExp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:paddingTop="10dp">

                    <GridView
                        android:id="@+id/smiley_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/os_texts"
                        android:numColumns="3"/>

                </LinearLayout>


            </LinearLayout>

            <FrameLayout
                android:id="@+id/ln_main_drop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15">

                        <ImageView
                            android:id="@+id/iv_capture_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"/>

                        <LinearLayout
                            android:id="@+id/ln_delete_bottom"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@color/colorBlack"
                            android:layout_gravity="bottom"
                            android:orientation="horizontal"
                            android:visibility="invisible">

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="13"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tv_team_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Do you want to delete it?"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="@color/colorWhite"
                                    android:textStyle="bold"
                                    android:maxEms="15"/>

                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:gravity="center">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorWhite"/>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ln_drop_delete"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center|left">

                                <ImageView
                                    android:padding="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|left"
                                    android:src="@mipmap/delete_smiley"/>

                            </LinearLayout>


                        </LinearLayout>

                        <com.mxi.lineapp.dragevent.DragLayer
                            android:id="@+id/fl_drag_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </FrameLayout>

