<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mxi.lineapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--<uses-permission android:name="android.permission.RECORD_AUDIO"/>-->

    <application
        android:name=".network.AppControll"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.mxi.lineapp.activity.MainActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.mxi.lineapp.activity.Splash"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mxi.lineapp.activity.ChooseNumberOfPlayersActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.mxi.lineapp.activity.ChooseFormationActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.mxi.lineapp.activity.ChooseTShirtActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:windowSoftInputMode="adjustPan"
            android:name="com.mxi.lineapp.activity.ChooseTeamName"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.mxi.lineapp.activity.SinglePlayerActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.mxi.lineapp.activity.OpenSavedFormationActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.mxi.lineapp.activity.VersusMenuActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.mxi.lineapp.activity.VersusActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.mxi.lineapp.activity.VersusSinglePlayerActivity"
            android:screenOrientation="sensorLandscape" />

        <activity android:name="com.mxi.lineapp.activity.GIFActivity"
            android:screenOrientation="sensorLandscape"/>

        <activity android:name="com.mxi.lineapp.activity.SmileyActivity"
            android:screenOrientation="sensorLandscape"/>

        <activity android:name="com.mxi.lineapp.activity.SmileyActivityTwo"
            android:screenOrientation="sensorLandscape"/>

    </application>

</manifest>